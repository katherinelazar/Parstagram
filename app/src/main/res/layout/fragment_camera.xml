<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:actionBarNavMode=""
    android:layout_height="match_parent"
    tools:context=".CameraFragment">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/chooseCamera"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText"
        android:layout_alignTop="@+id/chooseCameraRoll"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:backgroundTint="@color/blue_5_10_transparent"
        android:gravity="bottom"
        android:padding="10dp"
        android:text="@string/camera" />

    <Button
        android:id="@+id/chooseCameraRoll"
        android:layout_width="130dp"
        android:backgroundTint="@color/blue_5_10_transparent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView"
        android:textAllCaps="false"
        android:layout_alignEnd="@+id/imageView"
        android:layout_gravity="center"
        android:gravity="bottom"
        android:text="@string/camera_roll" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="276dp"
        android:layout_height="256dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:src="@drawable/camera_shadow_fill" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/submit_post"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:width="300dp"
        android:ems="10"
        android:hint="Enter a description"
        android:inputType="textPersonName"
        android:text="" />

    <Button
        android:id="@+id/submit_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:textAllCaps="false"
        android:width="300dp"
        android:backgroundTint="@color/direct_blue_ring_gradient_colour1"
        android:text="Post" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="84dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/nav_logo_whiteout" />


</RelativeLayout>